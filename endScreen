import tkinter as tk
from tkinter import PhotoImage
from tkinter import font

# Create a function to start the game with the selected difficulty level
def start_game(difficulty):
    if difficulty == 'Play Again':
        print('hi')
        # startGame

# Create the main window
root = tk.Tk()
root.title("Just Dance Start Screen")

# Set the window size to bbe larger (e.g., 600x400)
window_width = 800
window_height = 600
root.geometry(f"{window_width}x{window_height}")




# Load the background image
background_image = PhotoImage(file="/Users/jennydong/Desktop/justDance3.png")  # Replace "background.png" with your image file name

# Load the image
image1 = PhotoImage(file="/Users/jennydong/Desktop/hack112/gameover.png")  # Replace "logo.png" with your image file name

# Create a Label widget to display the image
image_label = tk.Label(root, image=image1)
image_label.pack(pady=20)  # Add padding to separate the image from buttons

# Create a label to display the background image
background_label = tk.Label(root, image=background_image)
background_label.place(relwidth=1, relheight=1)  # Make the label cover the entire window


# Create a frame to center the buttons
frame = tk.Frame(root)
frame.pack(expand=True)  # Expand the frame to fill the window


# Create a font object with your desired font properties
custom_font = font.Font(family="Times New Roman", size=20, weight="bold")

# Create and configure buttons for easy, medium, and hard difficulties
playAgain = tk.Button(root, text="Play Again", font = custom_font, command=lambda: start_game("Play Again"))


# Use the pack geometry manager to center the buttons
playAgain.pack(side="top", pady=30)  # Add padding to separate the buttons


# Start the main loop
root.mainloop()
